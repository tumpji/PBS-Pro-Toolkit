Bootstrap: docker
From: ubuntu:23.04

%files
	./requirements.txt 

%post
    apt-get -y update \
	&& apt-get -y upgrade \
	&& apt-get -y install python3.11 python3-pip

    rm /usr/lib/python3.11/EXTERNALLY-MANAGED

    python3.11 -m pip install --upgrade pip
    python3.11 -m pip install -r requirements.txt


